<Window x:Class="mod_add.Vistas.SeleccionProducto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mod_add.Vistas"
        mc:Ignorable="d"
        Title="Productos"
        ResizeMode="CanMinimize"
        Height="600"
        Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="110"/>
        </Grid.ColumnDefinitions>

        <Label
            Grid.Row="1"
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="Grupos:"/>
        <ComboBox
            Grid.Row="1"
            Grid.Column="1"
            VerticalAlignment="Center"
            Margin="5,0,5,0"
            DisplayMemberPath="descripcion"
            x:Name="Grupos"
            ItemsSource="{Binding Grupos}" 
            SelectionChanged="Grupos_SelectionChanged"/>

        <Label
            Grid.Row="2"
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="Producto:"/>
        <TextBox
            Grid.Row="2"
            Grid.Column="1"
            VerticalAlignment="Center"
            MaxLength="80"
            Margin="5,0,5,0"
            x:Name="Buscador"
            Text="{Binding Buscador}"
            CharacterCasing="Upper"
            KeyUp="Buscador_KeyUp"/>

        <Grid
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="7">
            <DataGrid
                Name="Productos"
                Margin="5"
                ItemsSource="{Binding Productos}"
                Style="{DynamicResource DataGridStyle1}"
                MouseDoubleClick="Productos_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        ElementStyle="{DynamicResource CenterCell}"
                        Width="15*"
                        Header="Clave"
                        Binding="{Binding idproducto}"/>
                    <DataGridTextColumn
                        ElementStyle="{DynamicResource CenterCell}"
                        Width="15*"
                        Header="Grupo"
                        Binding="{Binding idgrupo}"/>
                    <DataGridTextColumn
                        Width="50*"
                        Header="Descripción"
                        Binding="{Binding descripcion}"/>
                    <DataGridTextColumn
                        ElementStyle="{DynamicResource RightCell}"
                        Width="20*"
                        Header="Precio"
                        Binding="{Binding Detalle.precio}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <Button
            Grid.Row="4"
            Grid.Column="3"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Height="30"
            x:Name="Cancelar"
            Click="Cancelar_Click"
            Style="{DynamicResource ButtonBorderRoundStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30*"/>
                    <ColumnDefinition Width="70*"/>
                </Grid.ColumnDefinitions>
                <Image
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Source="/mod-add;component/Recursos/cuenta.png"/>
                <TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Text="CANCELAR"/>
            </Grid>
        </Button>
    </Grid>
</Window>
