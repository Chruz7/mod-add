<Window x:Class="mod_add.Vistas.Principal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mod_add.Vistas"
        mc:Ignorable="d"
        Title="Principal"
        WindowStartupLocation="CenterScreen"
        Height="500"
        Width="920" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button
            Grid.Row="0"
            Grid.Column="0"
            Style="{DynamicResource ButtonSimpleStyle}"
            x:Name="AbrirAjusteUnico"
            Click="AbrirAjusteUnico_Click">
            <Grid Style="{DynamicResource GridStyle}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40*"/>
                    <RowDefinition Height="60*"/>
                </Grid.RowDefinitions>
                <Image
                    Grid.Row="0"
                    Source="/mod-add;component/Recursos/cuenta.png"/>
                <TextBlock
                    Grid.Row="1"
                    TextWrapping="Wrap"
                    TextAlignment="Center"
                    Text="Ajustar un folio"/>
            </Grid>
        </Button>

        <Button
            Grid.Row="0"
            Grid.Column="1"
            Style="{DynamicResource ButtonSimpleStyle}"
            x:Name="AbrirAjusteMasivo"
            Click="AbrirAjusteMasivo_Click">
            <Grid Style="{DynamicResource GridStyle}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40*"/>
                    <RowDefinition Height="60*"/>
                </Grid.RowDefinitions>
                <Image
                    Grid.Row="0"
                    Source="/mod-add;component/Recursos/cuenta.png"/>
                <TextBlock
                    Grid.Row="1"
                    TextWrapping="Wrap"
                    TextAlignment="Center"
                    Text="Ajuste masivo (prod y folios)"/>
            </Grid>
        </Button>

        <Button
            Grid.Row="0"
            Grid.Column="5"
            Style="{DynamicResource ButtonSimpleStyle}"
            x:Name="AbrirBitacora"
            Click="AbrirBitacora_Click">
            <Grid Style="{DynamicResource GridStyle}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40*"/>
                    <RowDefinition Height="60*"/>
                </Grid.RowDefinitions>
                <Image
                    Grid.Row="0"
                    Source="/mod-add;component/Recursos/cuenta.png"/>
                <TextBlock
                    Grid.Row="1"
                    TextWrapping="Wrap"
                    TextAlignment="Center"
                    Text="Bitácora"/>
            </Grid>
        </Button>

        <Button
            Grid.Row="0"
            Grid.Column="6"
            Style="{DynamicResource ButtonSimpleStyle}"
            x:Name="AbrirConfiguracion"
            Click="AbrirConfiguracion_Click">
            <Grid Style="{DynamicResource GridStyle}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40*"/>
                    <RowDefinition Height="60*"/>
                </Grid.RowDefinitions>
                <Image
                    Grid.Row="0"
                    Source="/mod-add;component/Recursos/cuenta.png"/>
                <TextBlock
                    Grid.Row="1"
                    TextWrapping="Wrap"
                    TextAlignment="Center"
                    Text="Configuración"/>
            </Grid>
        </Button>

        <Button
            Grid.Row="0"
            Grid.Column="9"
            Style="{DynamicResource ButtonSimpleStyle}"
            x:Name="Salir"
            Click="Salir_Click">
            <Grid Style="{DynamicResource GridStyle}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40*"/>
                    <RowDefinition Height="60*"/>
                </Grid.RowDefinitions>
                <Image
                    Grid.Row="0"
                    Source="/mod-add;component/Recursos/cuenta.png"/>
                <TextBlock
                    Grid.Row="1"
                    TextWrapping="Wrap"
                    TextAlignment="Center"
                    Text="Salir"/>
            </Grid>
        </Button>

        <Grid
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="10"
            Margin="5"
            x:Name="Contenido"/>
    </Grid>
</Window>
