<UserControl x:Class="mod_add.Componentes.AjusteUnico"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:mod_add.Componentes"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"  
             mc:Ignorable="d" 
             d:DesignHeight="500"
             d:DesignWidth="920">
    <Grid
        Background="#FFFFFF">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button
            Grid.Row="0"
            Grid.Column="3"
            Margin="5"
            x:Name="Aniadir"
            Click="Aniadir_Click"
            Style="{DynamicResource ButtonBorderRoundStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30*"/>
                    <ColumnDefinition Width="70*"/>
                </Grid.ColumnDefinitions>
                <Image
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Source="/mod-add;component/Recursos/cuenta.png"/>
                <TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Padding="5,0,5,0"
                    FontWeight="Bold"
                    Text="AÑADIR"/>
            </Grid>
        </Button>

        <Button
            Grid.Row="0"
            Grid.Column="4"
            Margin="5"
            x:Name="Eliminar"
            Click="Eliminar_Click"
            Style="{DynamicResource ButtonBorderRoundStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30*"/>
                    <ColumnDefinition Width="70*"/>
                </Grid.ColumnDefinitions>
                <Image
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Source="/mod-add;component/Recursos/cuenta.png"/>
                <TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Padding="5,0,5,0"
                    FontWeight="Bold"
                    Text="ELIMINAR"/>
            </Grid>
        </Button>

        <Button
            Grid.Row="0"
            Grid.Column="5"
            Margin="5"
            x:Name="Aceptar"
            Click="Aceptar_Click"
            Style="{DynamicResource ButtonBorderRoundStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30*"/>
                    <ColumnDefinition Width="70*"/>
                </Grid.ColumnDefinitions>
                <Image
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Source="/mod-add;component/Recursos/cuenta.png"/>
                <TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Padding="5,0,5,0"
                    FontWeight="Bold"
                    Text="ACEPTAR"/>
            </Grid>
        </Button>

        <Button
            Grid.Row="0"
            Grid.Column="6"
            Margin="5"
            x:Name="Cancelar"
            Click="Cancelar_Click"
            Style="{DynamicResource ButtonBorderRoundStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30*"/>
                    <ColumnDefinition Width="70*"/>
                </Grid.ColumnDefinitions>
                <Image
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Source="/mod-add;component/Recursos/cuenta.png"/>
                <TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Padding="5,0,5,0"
                    FontWeight="Bold"
                    Text="CANCELAR"/>
            </Grid>
        </Button>

        <Grid
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="7">
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label
                Grid.Row="0"
                Grid.Column="0"
                VerticalAlignment="Bottom"
                Content="Folio:"
                Target="{Binding ElementName=Folio}"/>
            <TextBox
                Grid.Row="1"
                Grid.Column="0"
                VerticalAlignment="Center"
                Margin="5,0,5,0"
                x:Name="Folio"
                Text="{Binding Folio}"
                KeyUp="Folio_KeyUp"/>

            <Label
                Grid.Row="0"
                Grid.Column="1"
                VerticalAlignment="Bottom"
                Content="Fecha:"
                Target="{Binding ElementName=Fecha}"/>
            <DatePicker
                Grid.Row="2"
                Grid.Column="1"
                VerticalAlignment="Center"
                x:Name="Fecha"
                Margin="5,0,5,0"
                SelectedDate="{Binding Fecha}"/>

            <Label
                Grid.Row="0"
                Grid.Column="3"
                VerticalAlignment="Bottom"
                Content="Personas:"
                Target="{Binding ElementName=Personas}"/>
            <xctk:IntegerUpDown
                Grid.Row="1"
                Grid.Column="3"
                VerticalAlignment="Center"
                Margin="5,0,5,0"
                x:Name="Personas"
                Maximum="100"
                Minimum="0"
                Value="{Binding Personas}"/>

            <Label
                Grid.Row="0"
                Grid.Column="4"
                VerticalAlignment="Bottom"
                Content="Cliente:"
                Target="{Binding ElementName=Cliente}"/>
            <TextBox
                Grid.Row="1"
                Grid.Column="4"
                VerticalAlignment="Center"
                Margin="5,0,5,0"
                x:Name="Cliente"
                Text="{Binding Cliente}"/>
        </Grid>
        <Grid
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="7">
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="14*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <Label
                Grid.Row="0"
                Grid.Column="0"
                VerticalAlignment="Center"
                Content="Conservar precios al cambiar productos"
                Target="{Binding ElementName=CambiarPrecios}"/>

            <ComboBox
                Grid.Row="1"
                Grid.Column="0"
                VerticalAlignment="Center"
                Margin="5,1,5,2"
                ItemsSource="{Binding Condicionales}"
                DisplayMemberPath="Titulo"
                x:Name="CambiarPrecios"
                SelectionChanged="CambiarPrecios_SelectionChanged"/>

            <Label
                Grid.Row="0"
                Grid.Column="3"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Right"
                Content="Descuento Gral:"
                Target="{Binding ElementName=Descuento}"/>
            <xctk:IntegerUpDown
                Grid.Row="0"
                Grid.Column="4"
                VerticalAlignment="Bottom"
                Margin="5,0,0,3"
                x:Name="Descuento"
                Maximum="100"
                Minimum="0"
                Value="{Binding Descuento}"/>
            <Label
                Grid.Row="0"
                Grid.Column="5"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Padding="0"
                Content="%" Margin="5,4,5,5"/>

            <Label
                Grid.Row="1"
                Grid.Column="3"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Right"
                Content="Propina:"
                Target="{Binding ElementName=Propina}"/>
            <TextBox
                Grid.Row="1"
                Grid.Column="4"
                Grid.ColumnSpan="2"
                VerticalAlignment="Center"
                Margin="5,4,5,3"
                x:Name="Propina"
                Text="{Binding Propina}"/>

            <Label
                Grid.Row="0"
                Grid.Column="6"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Right"
                Content="Subtotal:"
                Target="{Binding ElementName=Subtotal}"/>
            <TextBox
                Grid.Row="0"
                Grid.Column="7"
                VerticalAlignment="Center"
                Margin="5,4,5,3"
                x:Name="Subtotal"
                Text="{Binding Subtotal}"/>

            <Label
                Grid.Row="1"
                Grid.Column="6"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Right"
                Content="Total:"
                Target="{Binding ElementName=Total}"/>
            <TextBox
                Grid.Row="1"
                Grid.Column="7"
                VerticalAlignment="Center"
                Margin="5,4,5,3"
                x:Name="Total"
                Text="{Binding Total}"/>
        </Grid>
        <Grid
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="7">
            <DataGrid
                Name="DetallesCheque"
                Margin="5"
                ItemsSource="{Binding DetallesCheque}"
                Style="{DynamicResource DataGridStyle1}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Header="Mov."
                        Binding="{Binding Movimiento}"/>
                    <DataGridTextColumn
                        Width="*"
                        Header="Comanda"
                        Binding="{Binding Comanda}"/>
                    <DataGridTextColumn
                        Width="*"
                        Header="Cantidad"
                        Binding="{Binding Cantidad}"/>
                    <DataGridTextColumn
                        Width="*"
                        Header="Clave"
                        Binding="{Binding Clave}"/>
                    <DataGridTextColumn
                        Width="*"
                        Header="Descripción"
                        Binding="{Binding Descripcion}"/>
                    <DataGridTextColumn
                        Width="*"
                        Header="Desc."
                        Binding="{Binding Descuento}"/>
                    <DataGridTextColumn
                        Width="*"
                        Header="Precio"
                        Binding="{Binding Precio}"/>
                    <DataGridTextColumn
                        Width="*"
                        Header="Importe"
                        Binding="{Binding Importe}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
